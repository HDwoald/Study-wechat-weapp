.userNameContext {
  display: flex;
  flex-direction: column;
  position: relative;
  margin-top: 60rpx;
}

.realNameContext {
  margin-top: -55rpx;
  margin-left: -20%;
}

/* 名称和头像 */

.userContent {
  position: absolute;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
}

page {
  background: #eee;
}

/*user info*/

.hr {
  border: 1px solid #ccc;
  opacity: 0.2;
  width: 90%;
  margin: 0 auto;
  background-color: red;
}

.avater {
  margin-left: -100rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 350rpx;
  width: 100%;
  position: relative;
  background: white;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-realName {
  font-weight: bold;
  font-size: 40rpx;
  color: #333;
}

.userinfo-userName {
  font-size: 25rpx;
  color: gray;
}

/*menu list*/

.tableviewcell {
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #ddd;
  color: #666;
  background: white;
  display: flex;
  align-items: center;
}

/*icon*/

.tableviewcell image {
  width: 60rpx;
  height: 60rpx;
}

/*text*/

.tableviewcell text {
  font-size: 16px;
  margin-left: 10px;
}

/*button*/

.logout {
  margin: 30rpx;
}
